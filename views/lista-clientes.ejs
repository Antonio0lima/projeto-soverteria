<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lista de Clientes</title>
  
  <link rel="stylesheet" href="/css/lista-clientes.css">
  <link href="https://fonts.googleapis.com/css2?family=Inconsolata:wght@400;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/navbar.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body> 
  <% if (usuario && usuario.tipo==="admin" ) { %>
    <%- include("partials/navbar/navbar-adm") %>
  <% } else { %>
    <%- include("partials/navbar/navbar") %>
  <% } %>

  <div id="dados-clientes-json" style="display: none;">
    <%- JSON.stringify(typeof clientes !== 'undefined' ? clientes : []) %>
  </div>

  <h1 class="titulo-pagina">
    <i class="fas fa-users"></i> Lista de Clientes
  </h1>

  <div class="lista-clientes">
    <% if (typeof clientes === 'undefined' || clientes.length === 0) { %>
      <div class="sem-clientes">
        <i class="fas fa-user-slash"></i>
        <h3>Nenhum cliente cadastrado</h3>
        <p>Quando houver clientes cadastrados, eles aparecerão aqui.</p>
      </div>
    <% } else { %>
      <% clientes.forEach(cliente => { %>
        <div class="linha-cliente">
          <div class="info-cliente">
            <div class="nome-cliente">
              <%= cliente.nome %>
              <% if (cliente.tipo_usuario === 'admin') { %>
                <span class="badge-tipo badge-admin">ADMIN</span>
              <% } else { %>
                <span class="badge-tipo badge-cliente">CLIENTE</span>
              <% } %>
            </div>
            <div class="email-cliente"><%= cliente.email %></div>
          </div>

          <div class="botao-ver" onclick="abrirModalCliente('<%= cliente.id %>')" title="Ver Detalhes">
            <i class="fa-solid fa-info"></i>
          </div>
        </div>
      <% }) %>
    <% } %>
  </div>

  <div id="popup-cliente" class="popup oculto">
    <div class="popup-conteudo">
      <div class="popup-header">
        <h2><i class="fas fa-user-circle"></i> Detalhes do Cliente</h2>
        <span class="fechar" onclick="fecharPopup()">×</span>
      </div>

      <div class="info-detalhada">
        <div class="info-item"><span class="info-label">Nome:</span><span class="info-value" id="c-nome"></span></div>
        <div class="info-item"><span class="info-label">Email:</span><span class="info-value" id="c-email"></span></div>
        <div class="info-item"><span class="info-label">Tipo:</span><span class="info-value" id="c-tipo"></span></div>
        <div class="info-item"><span class="info-label">Nascimento:</span><span class="info-value" id="c-nasc"></span></div>
        <div class="info-item"><span class="info-label">Cadastro:</span><span class="info-value" id="c-cad"></span></div>
        <div class="info-item"><span class="info-label">Pix:</span><span class="info-value" id="c-pix"></span></div>
        <div class="info-item"><span class="info-label">Celular:</span><span class="info-value" id="c-celular"></span></div>

        <div class="estatisticas">
          <h3><i class="fas fa-chart-bar"></i> Estatísticas</h3>
          <div class="info-item"><span class="info-label">Total Pedidos:</span><span class="info-value" id="c-total-pedidos">...</span></div>
          <div class="info-item"><span class="info-label">Último Pedido:</span><span class="info-value" id="c-ultimo-pedido">...</span></div>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Recupera os dados da div oculta e converte para objeto JS
    let todosClientes = [];
    try {
        const divConteudo = document.getElementById('dados-clientes-json').textContent;
        todosClientes = JSON.parse(divConteudo || '[]');
    } catch (e) {
        console.error("Erro ao ler dados:", e);
    }

    function formatarData(data) {
      if (!data) return "Não informado";
      try {
        const dataObj = new Date(data);
        if (isNaN(dataObj)) return data; 
        return dataObj.toLocaleDateString('pt-BR');
      } catch (e) { return data; }
    }

    function abrirModalCliente(id) {
      const idStr = String(id);
      const cliente = todosClientes.find(c => String(c.id) === idStr);
      
      if (cliente) {
          mostrarCliente(cliente);
      } else {
          console.error("Cliente não encontrado. ID:", id);
      }
    }

    function mostrarCliente(cliente) {
      document.getElementById("c-nome").textContent = cliente.nome || "Não informado";
      document.getElementById("c-email").textContent = cliente.email || "Não informado";
      
      document.getElementById("c-tipo").innerHTML = cliente.tipo_usuario === 'admin' 
        ? '<span class="badge-tipo badge-admin">ADMINISTRADOR</span>' 
        : '<span class="badge-tipo badge-cliente">CLIENTE</span>';
        
      document.getElementById("c-nasc").textContent = formatarData(cliente.data_nascimento);
      document.getElementById("c-cad").textContent = formatarData(cliente.data_cadastro);
      document.getElementById("c-pix").textContent = cliente.chave_pix || "Não cadastrada";
      document.getElementById("c-celular").textContent = cliente.numero_celular || "Não informado";
      
      if(cliente.id) {
        buscarEstatisticasCliente(cliente.id);
      }
      
      document.getElementById("popup-cliente").classList.remove("oculto");
    }

    async function buscarEstatisticasCliente(clienteId) {
      try {
        const response = await fetch(`/api/cliente/${clienteId}/estatisticas`);
        if (!response.ok) throw new Error('Falha API');
        const data = await response.json();
        
        if (data.sucesso) {
          document.getElementById("c-total-pedidos").textContent = data.totalPedidos || 0;
          document.getElementById("c-ultimo-pedido").textContent = data.ultimoPedido 
            ? formatarData(data.ultimoPedido) 
            : "Nenhum pedido";
        } else {
          document.getElementById("c-total-pedidos").textContent = "-";
          document.getElementById("c-ultimo-pedido").textContent = "-";
        }
      } catch (erro) {
        console.error(erro);
        document.getElementById("c-total-pedidos").textContent = "-";
        document.getElementById("c-ultimo-pedido").textContent = "-";
      }
    }

    function fecharPopup() {
      document.getElementById("popup-cliente").classList.add("oculto");
    }

    document.getElementById('popup-cliente').addEventListener('click', function(e) {
      if (e.target === this) fecharPopup();
    });

    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') fecharPopup();
    });
  </script>
</body>
</html>